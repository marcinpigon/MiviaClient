<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiviaMaui.App"
             x:Name="MiviaMaui">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            !-- Define a vivid green color -->
            <Color x:Key="VividGreen">#49a944</Color>
            <!-- You can adjust the hex code as needed -->

            <!-- Define a style for the buttons -->
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource VividGreen}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="20" />
                <!-- Optional: for rounded corners -->
                <Setter Property="Padding" Value="12,5" />
                <!-- Optional: for padding -->
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
