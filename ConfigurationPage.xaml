<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiviaMaui.ConfigurationPage"
             Title="Configuration Page">

    <StackLayout VerticalOptions="CenterAndExpand"
                 HorizontalOptions="CenterAndExpand"
                 Padding="20">
        <Label Text="Access Token"
               FontSize="Medium"
               HorizontalOptions="Center"/>
        <Entry x:Name="accessTokenEntry"
               Placeholder="Enter your access token"
               HorizontalOptions="FillAndExpand"
               IsPassword="True"/>
        <Button x:Name="toggleVisibilityButton"
            Text="Show"
            Clicked="OnToggleVisibilityClicked"
            HorizontalOptions="Start"
            VerticalOptions="Center"/>
        <Button Text="Save"
            Clicked="OnSaveClicked"
            HorizontalOptions="Start"
            VerticalOptions="Center"/>
        <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand">
            <CheckBox x:Name="enableNotificationsCheckBox"
                      Margin="10,0,0,0"
                      VerticalOptions="Center"
                      IsChecked="True"/>
            <Label Text="Enable Desktop Notifications"
                   FontSize="Medium"
                   VerticalOptions="Center"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
