<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiviaMaui.HistoryPage"
             Title="History">

    <StackLayout Padding="10">
        <Label Text="History" FontAttributes="Bold" FontSize="Large" HorizontalOptions="Center" />
        <ListView x:Name="HistoryListView" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="5">
                            <Label Text="{Binding Timestamp}" FontAttributes="Bold" FontSize="Medium" />
                            <Label Text="{Binding EventType}" FontAttributes="Italic" />
                            <Label Text="{Binding Description}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
